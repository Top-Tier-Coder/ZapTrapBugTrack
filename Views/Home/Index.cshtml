                <i class="fas fa-bug"></i>
            </div>
            <a data-toggle="modal" data-target="#urgentModal" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-2 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h5>Tickets: @ViewBag.Critical</h5>

                <p>Priority: Critical</p>
            </div>
            <div class="icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <a data-toggle="modal" data-target="#criticalModal" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>

        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->

<section class="content">

    <div class="row">
        <div class="col">


            <!-- DONUT CHARTS -->
            <div class="card card-purple">
                <div class="card-header">
                    <h3 class="card-title">Zap-Trap Stats</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col">
                            <h6>Ticket Status Chart</h6>
                            <canvas id="TicketStatusChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                        <div class="col">
                            <h6>Ticket Priority Chart</h6>
                            <canvas id="TicketPriorityChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                        <div class="col">
                            <h6>Ticket Type Chart</h6>
                            <canvas id="TicketTypeChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                    </div>
                </div>

                <!-- /.card-body -->
            </div>
        </div>
    </div>
    <!-- /.row -->
    <div class="card card-cyan">
        <div class="card-header">
            <h3 class="card-title">All Projects</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

        </div>
    </div>
    <div class="card card-purple">
        <div class="card-header">
            <h3 class="card-title">All Tickets</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

        </div>
</section>

