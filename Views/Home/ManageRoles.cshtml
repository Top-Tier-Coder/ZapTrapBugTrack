<div class="card">
    <div class="card-header">
        <h5 class="card=-title">Employee-Role</h5>
    </div>

    <div class="card-body">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Employee
                    </th>
                    <th>
                        Role
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in userManager.Users.ToList())
                {
                    <tr>
                        <td>
                            @user.FullName
                        </td>
                        <td>
                            @foreach (var role in (await roleService.ListUserRolesAsync(user)))
                            {
                                <p>@role</p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
