<div class="card">
    <div class="card-body bg-info">
        <h4 class="card-title">User Management</h4>
        <form asp-action="ManageUsersOnProject" method="post">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label h5">Choose a project</label>
                        <select name="projectId" class="form-control" asp-items="@ViewBag.ProjectId"></select>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label h5">Choose one project manager</label>
                        <select name="projectManagerId" class="form-control" asp-items="@ViewBag.ProjectManagerId"></select>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label h5">Choose some developers</label>
                        <select name="developerIds" multiple="multiple" class="form-control" asp-items="@ViewBag.DeveloperIds"></select>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label h5">Choose some submitters</label>
                        <select name="submitterIds" multiple="multiple" class="form-control" asp-items="@ViewBag.SubmitterIds"></select>
                    </div>
                </div>
            </div>



            <div class="row mt-2">
                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
                <div class="col-4 offset-2">
                    <a asp-action="ManageRoles" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>