@model ZapTrapBugTrack.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Project</h1>


<!-- Horizontal Form -->
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Edit Project</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <label asp-for="Name" class="control-label col-sm-2 col-form-label">Project Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="" placeholder="Edit Project Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="control-label col-sm-2 col-form-label">Company Description</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" id="" placeholder="Edit Company Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageFileName" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ImageFileName" class="form-control" placeholder="Image File Name" />
                    <span asp-validation-for="ImageFileName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageFileData"class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ImageFileData" class="form-control" placeholder="Image File Data" />
                    <span asp-validation-for="ImageFileData" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CompanyId" class="control-label col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button asp-action="Index" class="btn btn-warning float-right">Cancel Edit</button>
            <button type="submit" class="btn btn-primary" value="Save">Complete Edit</button>

        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
