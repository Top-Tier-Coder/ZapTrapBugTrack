@model ZapTrapBugTrack.Models.Company

@{
    ViewData["Title"] = "Edit";
}


<!-- Horizontal Form -->
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Edit Company</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <label for="inputEmail3" asp-for="Name" class="control-label col-sm-2 col-form-label">Company Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="" placeholder="Edit Company Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="control-label col-sm-2 col-form-label">Company Description</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" id="" placeholder="Edit Company Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button asp-action="Index" class="btn btn-warning float-right">Cancel Edit</button>
            <button type="submit" class="btn btn-primary" value="Save">Complete Edit</button>

        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}