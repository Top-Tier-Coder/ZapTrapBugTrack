@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}



    <div class="hold-transition register-page" style="background-image: URL('/img/Zap-Trap-Background.jpg');
        width: 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;">

        <div class="login-box" style="opacity:0.9">
            <div class="card card-outline card-primary">
                <div class="card-header text-center">
                    <a href="../../index2.html" class="h1"><b>ZAP-TRAP</b></a>
                    <h4>Bug Tracker</h4>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Request new password</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                    <p class="mt-3 mb-1">
                        <a asp-page="/account/login">Login</a>
                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <!-- /.login-box -->


        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
